<div id="tokengate-hive-app" data-product_id="{{ product.id }}"></div>
<script async type="module">
  try {
    const req = await fetch('https://hive-app.fly.dev/public/gates', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        productGid: `gid://shopify/Product/{{ product.id }}`,
        shopDomain: '{{ shop.domain }}',
      }),
    });
    const gates = await req.json()
    window.myAppGates = gates
  } catch (e) {
    console.error('Error fetching gates', e)
    window.myAppGates = []
  }
</script>
<script async type="module" src="{{ "index.js" | asset_url }}"></script>

{% schema %}
  {
    "name": "Tokengate",
    "target": "section",
    "templates": ["product"],
    "settings": []
  }
{% endschema %}
